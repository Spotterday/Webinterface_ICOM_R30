{
  "name": "ic-r30",
  "version": "1.6.0",
  "description": "Remote Control for Icom IC-R30",
  "homepage": "https://www.spotterday.de",
  "main": "server.js",
  "os": [
    "win32",
    "linux"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./server.js"
  },
  "bin": {
    "ic-r30": "server.js"
  },
  "author": "Christian Pusch [https://www.spotterday.de]",
  "license": "ISC",
  "engineStrict": true,
  "engines": {
    "npm": ">=8.3.0",
    "node": ">=14"
  },
  "pkg": {
    "assets": [
      "server.js",
      "client.js",
      "/db/*",
      "/js/*",
      "node_modules/**/*",
      "public/**/*"
    ],
    "targets": [
      "node14-linux-x64",
      "node14-win-x64",
      "node14-linux-arm64"
    ],
    "outputPath": "build"
  },
  "keywords": [
    "icr30",
    "icom",
    "ic-r30"
  ],
  "dependencies": {
    "bluetooth-classic-serialport-client": "0.1.25",
    "buffer": "6.0.3",
    "chalk": "4.1.2",
    "config": "3.3.6",
    "express": "4.17.1",
    "jquery-mousewheel": "3.1.13",
    "os": "0.1.2",
    "serialport": "9.2.8",
    "socket.io": "4.4.0",
    "sqlite3": "5.0.2"
  },
  "devDependencies": {
    "pkg": "^5.5.1"
  }
}
